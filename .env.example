# ============================================================================
# RPC URLs
# ============================================================================

# Sepolia (Ethereum Testnet) - Master/Hub Chain
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# Alternative RPC providers:
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_API_KEY
# SEPOLIA_RPC_URL=https://rpc.sepolia.org (public, may be unreliable)

# OP Sepolia (Optimism Testnet) - Spoke Chain
OP_SEPOLIA_RPC_URL=https://opt-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# Alternative RPC providers:
# OP_SEPOLIA_RPC_URL=https://opt-sepolia.infura.io/v3/YOUR_API_KEY
# OP_SEPOLIA_RPC_URL=https://sepolia.optimism.io (public, may be unreliable)

# ============================================================================
# Chain IDs (for reference, not used in tests)
# ============================================================================
SEPOLIA_CHAIN_ID=11155111
OP_SEPOLIA_CHAIN_ID=11155420

# ============================================================================
# LayerZero Endpoint IDs (for reference, not used in tests)
# ============================================================================
